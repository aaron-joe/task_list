<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start on</th>
      <th>Due on</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="sortable">
    <div id='all-tasks'><%= render @tasks %></div>
  </tbody>
</table>
<br>

<div id="new-form-container"></div>

